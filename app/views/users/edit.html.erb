<div class="rounded bg-white mt-5">
  <div class="row">
      <div class="col-md-4 border-right">
        <div class="d-flex flex-column align-items-center text-center p-3 py-5">
          <% if @user.name && @user.name!="" %>
           <h1><%= @user[:name] %></h1>
          <% else %>
           <h1><%= @user.email %></h1>
          <% end %>
          <div class = "user-profiles">
           <%= link_to 'Back to home', root_path, :class => "btn btn-primary"%>
          </div>
        </div>
      </div>
      <div class="col-md-8">
          <div class="p-3 py-5">
              <div class="row mt-2">
                  <%= form_for :user, local: true do |f| %>
                    <p>
                      <%= f.label :name %><br>
                      <%= f.text_field :name %>
                    </p>
                    <p>
                      <%= f.label :payment %>
                      (Preferred payment method--venmo username, cash etc) <br>
                      <%= f.text_field :payment %>
                    </p>
                    <p>
                      <%= f.submit :class => "btn btn-primary"%>
                    </p>
                  <% end %>
              </div>
          </div>
      </div>
  </div>
</div>
