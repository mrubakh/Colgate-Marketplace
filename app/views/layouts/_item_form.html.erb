<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container bootstrap snippets bootdeys">
     <div class="row">
    <div class="col-md">
      <h3 id="list-item">List an Item</h3>
    </div>
  </div>
   <div class="row">
      <div class="col-xs-12 col-sm-9">
         <%= form_with model: @item, local: true do |f| %>
            <div class="panel panel-default panel-body">
               <div class="form-group">
                  <%= f.label :name, class: "col-sm-2 control-label"%>
                  <%= f.text_field :name, class: "col-sm-15" %>
               </div>
               <div class="form-group">
                  <%= f.label :description, class: "col-sm-2 control-label"%>
                  <%= f.text_area :description, class: "col-sm-15" %>
               </div>
               <div class="form-group">
                  <%= f.label :price, class: "col-sm-2 control-label"%>
                  <%= f.number_field :price, in: 0.01..10000.00, step: 0.01, class: "col-sm-15" %>
               </div>
            </div>
            <div class="panel panel-default panel-body">
               <div class="form-group" id="image">
                  <%= f.label :image, class: "col-sm-2 control-label"%>
                  <%= f.file_field :image, class: "col-sm-15" %>
               </div>
               <div class="form-group">
                  <%= f.label :deliverable, class: "col-sm-2 control-label"%>
                  <%= f.check_box(:deliverable, {class: "col-sm-15"}, true, nil) %>
               </div>
               <div class="form-group">
                  <%= f.label :category, class: "col-sm-2 control-label"%>
                  <%= f.select :category, ['', 'Electronics', 'Books', 'Furniture'], class: "col-sm-15" %>
               </div>
            </div>
            <div class="panel panel-default panel-body">
               <div class="form-group">
                  <div class="col-sm-10 col-sm-offset-0">
                     <%= f.submit(button_text) %>
                     <button><%= link_to "Cancel", root_path %></button>
                  </div>
               </div>
            </div>
         <% end %>
      </div>
   </div>
</div>

