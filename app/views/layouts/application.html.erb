<!DOCTYPE html>
<html>
  <head>
    <title>MarketplaceApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
        <div class="row">
          <div class="col-md-4 alert alert-primary notice">
            <%= "#{flash[:notice]}" %>
          </div>
        </div>
    <% end %>
    <% if flash[:alert] %>
        <div class="row">
          <div class="col-md-4 alert alert-warning alert">
            <%= "#{flash[:alert]}" %>
          </div>
        </div>
     <% end %>
     <% if flash[:error] %>
        <div class="row">
          <div class="col-md-4 alert alert-error alert">
            <%= "#{flash[:error]}" %>
          </div>
        </div>
     <% end %>
     
    <div>
      <% if user_signed_in? %>
      <p>
        <% if current_user.name == nil || current_user.name =="" %>
          Logged in as <%= current_user.email %>. |
        <%else%>
          Logged in as <%= current_user.name %>. |
        <%end%>
      <%= link_to 'Edit profile', edit_user_path(current_user.id)%> |
      <%= link_to "Log out", destroy_user_session_path, method: :delete%>
      </p>
    <% else %>
      <p>
      You are not logged in. | 
      <%= link_to "Log in with Google SSO", user_google_oauth2_omniauth_authorize_path, :method => :post %>
      </p>
    <% end %>
  </div>
    
    <%= yield %>
    
  </body>
</html>
